@model List<GetProductsByJoinCategories> 



<h1>Все продукты нашего магазина</h1>

<div class="row mt-5 mb-2">
    @{
        foreach (var x in Model)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="~/Images/@x.Image" alt="@x.Name" />
                <h2>@x.Name</h2>
                <p content="TJS">Цена:@x.Price c. </p>
                <p><a class="btn btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@x.Id">Добавить в корзину</a></p>

            </div>
        }
    }
</div>
